{
  "name": "links-site",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": ">=18.17.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "test": "jest",
    "test:ci": "jest --ci --coverage",
    "analyze": "ANALYZE=true next build",
    "postinstall": "node -e \"try { require('sharp'); } catch (e) { console.log('Installing sharp for production image optimization...'); require('child_process').execSync('npm install --no-save sharp'); }\"",
    "prepare": "node -e \"if(process.env.NODE_ENV !== 'production') { process.exit(1) } \"",
    "prestart": "node -e \"if(process.env.NODE_ENV !== 'production') { console.log('Error: Do not use npm start in development. Use npm run dev instead.'); process.exit(1) }\"",
    "prebuild": "npm run lint",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "dependencies": {
    "@auth/mongodb-adapter": "^3.7.4",
    "bcryptjs": "^2.4.3",
    "cloudinary": "^2.5.1",
    "critters": "^0.0.23",
    "dompurify": "^3.2.4",
    "lru-cache": "^10.1.0",
    "mongodb": "^6.11.0",
    "next": "^15.1.6",
    "next-auth": "^4.24.11",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^5.4.0",
    "sharp": "^0.33.1",
    "swr": "^2.3.2"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "^15.0.4",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^14.1.2",
    "dotenv": "^16.4.7",
    "eslint": "^8",
    "eslint-config-next": "15.0.4",
    "eslint-plugin-jest": "^27.9.0",
    "eslint-plugin-security": "^3.0.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8",
    "prettier": "^3.0.0",
    "tailwindcss": "^3.4.1",
    "text-encoding": "^0.7.0",
    "whatwg-encoding": "^3.1.1"
  },
  "optionalDependencies": {
    "sharp": "^0.33.1"
  }
}
